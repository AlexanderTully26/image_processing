from PIL import Image

def grayscale(image):  #convert into black and white function
    pixels = image.load()
    width, height = image.size
 
    for x in range(width):
        for y in range(height):
            r, g, b = pixels[x, y]
           # gray = int(0.2989 * r + 0.5870 * g + 0.1140 * b)
            gray = int((r + g + b)/3)
            pixels[x, y] = (gray, gray, gray)

    return image

image = Image.open("/Users/alexander.tully26/Downloads/AirCarTest.jpg") #Cant upload image to github so change name in this line
grayscale_image = grayscale(image)
grayscale_image.save("grayscale_image.jpg")
